---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}

  <!-- Collapsible Attribution Section -->
  {% if page.attribution %}
    <details class="attribution-section mt-2">
      <summary>Image Credits</summary>
      <p class="attribution-text small">
        {{ page.attribution | markdownify }}
      </p>
    </details>
  {% endif %}
</div>
